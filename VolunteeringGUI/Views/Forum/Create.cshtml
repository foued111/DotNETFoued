@model Data.forum

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="forum" class="home">
    <div class="home_overlay">
        <div class="container">
            <div class="row">
                <div class="main_slider_area">
                    <div class="slider">
                        <div class="single_slider">
                            <h3>Feel free to post anything!</h3>
                            <p>Ideas  -  Questions  -  Events</p>
                            <div class="single_slider_img_icon">
                                <img src="~/Content/images/ii1.png" alt="" />
                            </div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="home_searce_domain_area">
                                    <div class="main_home_searce_domain_content">
                                        @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @placeholder = "Add Subject? ..." } })                                        
                                        @Html.EditorFor(model => model.question, new { htmlAttributes = new { @placeholder = "Add Question? ..." } })                                        
                                    </div>
                                </div>
                                <div class="home_searce_domain_area">
                                    <div class="main_home_searce_domain_content">
                                        <h3>what do you think?</h3>
                                    </div>
                                    <div class="main_home_searce_domain_content">
                                        @Html.TextAreaFor(model => model.description, new { @cols = 200, @rows = 10 } )                                        
                                    </div>
                                </div>
                                <div class="home_searce_domain_area">
                                    <div class="main_home_searce_domain_content">
                                        @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="main_home_searce_domain_content">
                                        @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="main_home_searce_domain_content">
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="home_searce_domain_area">
                                    <div class="main_home_searce_domain_content">
                                        <input type="submit" value="Create Post!" />
                                    </div>
                                </div>
                            </div>
}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

